<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_main_theme"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_title_main_theme">

        <com.panning.panning.view.PanningTopBar xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black_title_main_theme"
            app:leftBackGround="@color/colorGold"
            app:rightBackGround="@color/colorGold"
            app:titleText="我的"
            app:titleTextColor="@color/colorWhite"
            app:titleTextSize="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@mipmap/head"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Cloud"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="18510970806"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />
        </LinearLayout>
    </RelativeLayout>

    <com.panning.panning.view.PanningItemView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10sp"
        android:background="@color/colorWhite"
        app:itemText="可提现"
        app:itemTextColor="@color/black_item_text"
        app:itemTextSize="10dp"
        app:rightBackground="@color/colorGold"
        app:subItemText="60.00"
        app:subItemTextColor="@color/gray_text"
        app:subItemTextSize="8sp" />

    <com.panning.panning.view.PanningItemView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        app:itemText="已提现"
        app:itemTextColor="@color/black_item_text"
        app:itemTextSize="10sp"
        app:rightBackground="@color/colorGold"
        app:subItemText="500.00"
        app:subItemTextColor="@color/gray_text"
        app:subItemTextSize="8sp" />

    <com.panning.panning.view.PanningItemView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        app:itemText="总收益"
        app:itemTextColor="@color/black_item_text"
        app:itemTextSize="10sp"
        app:rightBackground="@color/colorGold"
        app:subItemText="500.90"
        app:subItemTextColor="@color/gray_text"
        app:subItemTextSize="8sp" />

    <com.panning.panning.view.PanningItemView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        app:itemText="分享给好友得金币"
        app:itemTextColor="@color/black_item_text"
        app:itemTextSize="10sp"
        app:rightBackground="@color/colorGold" />
</LinearLayout>
