<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorIvory"
    android:orientation="vertical">

    <com.panning.panning.view.PanningTopBar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorDarkCyan"
        app:leftBackGround="@color/colorGold"
        app:titleText="设置"
        app:titleTextColor="@color/colorWhite"
        app:titleTextSize="6dp" />

    <com.panning.panning.view.PanningItemView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        app:itemText="XXX"
        app:itemTextColor="@color/colorBlack"
        app:itemTextSize="10sp"
        app:rightBackground="@color/colorGold"
        app:subItemText="sss"
        app:subItemTextColor="@color/colorBlack"
        app:subItemTextSize="8sp" />

    <com.panning.panning.view.PanningItemView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        app:itemText="XXX"
        app:itemTextColor="@color/colorBlack"
        app:itemTextSize="10sp"
        app:rightBackground="@color/colorGold"
        app:subItemText="sss"
        app:subItemTextColor="@color/colorBlack"
        app:subItemTextSize="8sp" />

    <com.panning.panning.view.PanningItemView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        app:itemText="XXX"
        app:itemTextColor="@color/colorBlack"
        app:itemTextSize="10sp"
        app:rightBackground="@color/colorGold"
        app:subItemText="sss"
        app:subItemTextColor="@color/colorBlack"
        app:subItemTextSize="8sp" />

    <com.panning.panning.view.PanningItemView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        app:itemText="XXX"
        app:itemTextColor="@color/colorBlack"
        app:itemTextSize="10sp"
        app:rightBackground="@color/colorGold"
        app:subItemText="sss"
        app:subItemTextColor="@color/colorBlack"
        app:subItemTextSize="8sp" />

    <com.panning.panning.view.PanningItemView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        app:itemText="XXX"
        app:itemTextColor="@color/colorBlack"
        app:itemTextSize="10sp"
        app:rightBackground="@color/colorGold"
        app:subItemText="sss"
        app:subItemTextColor="@color/colorBlack"
        app:subItemTextSize="8sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:padding="10dp"
        android:text="退出登录"
        android:textColor="@color/colorBlack"
        android:textSize="20dp" />
</LinearLayout>
